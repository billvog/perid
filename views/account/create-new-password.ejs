<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create new password - Perid</title>
    <link rel="shortcut icon" href="/assets/PeridIcon.svg" type="image/x-icon">
    <!-- Fontawesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <!-- Custom -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/form.css"> 
</head>
<body class="preload">
    <div class="content-container container">
        <%- include('../partials/header') %> 

        <div class="wraper">
            <form id="reset-pwd-form" class="d-block" action="/account/my-account/create-new-password/<%= typeof token != 'undefined' ? token : 'n-a' %>" method="POST">
                <%- include('../partials/form-messages') %>
                <div class="mb-2">
                    <h2>Create a new password for your account</h2>
                </div>
                <input type="hidden" name="token"
                value="<%= typeof token != 'undefined' ? token : 'n/a' %>">
                <div class="mb-2">
                    <label for="InputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="InputPassword" name="password" placeholder="Enter Password" required>
                </div>
                <div class="mb-3">
                    <label for="InputPasswordConfirm" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="InputPasswordConfirm" name="passwordConfirm" placeholder="Repeat Password" required>
                </div>
                <button class="btn btn-primary"><i class="fas fa-key"></i> Change</button>
            </form>
        </div>
    </div>
</body>
<!-- Bootstrap -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/main.js"></script>
</html>